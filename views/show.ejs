<% include ./partials/header %>



<div class="container">
  <div class="col-md-9">
    <div class="thumbnail">
      <img class="img-responsive" src="<%= game.image %>" alt="game image">
      <div class="caption-full">
        <h4> <%= game.name%> </h4>
        <p> <%= game.description%> </p>
      </div>
    </div>
    <a  class="btn btn-warning endbtn" href="/games/<%= game._id%>/edit">Edit</a>
    <a  class="btn btn-primary endbtn" href="/games">Back to all games</a>
  </div>
</div>

<% include ./partials/footer %>
