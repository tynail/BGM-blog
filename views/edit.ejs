<% include ./partials/header %>

<div class="container">
  <div class="form">
    <h1 class="h1Form">Edit <%=game.name%></h1>
    <form action="/games/<%=game._id%>/?_method=PUT" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" value="<%=game.name%>" name="game[name]">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" value="<%= game.image %>" name="game[image]">
      </div>
      <div class="form-group">
        <textarea class="form-control" rows="8" cols="200" name="game[description]"> <%= game.description %> </textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary btn-block">Submit</button>
      </div>

    </form>
  </div>
</div>

<% include ./partials/footer %>
